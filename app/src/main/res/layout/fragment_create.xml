<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateFragment">

    <EditText
        android:id="@+id/et_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_send_postcard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minLines="8"
        tools:text="Dear Mom, I am doing well in Las Vegas. Love, Jakin" />

    <EditText
        android:id="@+id/et_sendto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_message"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@+id/iv_add_button"
        android:hint="to: \@" />

    <ImageButton
        android:id="@+id/ib_send_postcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:background="#FFFFFF"
        android:src="@drawable/send_icon" />

    <ImageView
        android:id="@+id/iv_cover_photo"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_below="@+id/et_message"
        android:layout_alignStart="@+id/et_message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="52dp"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_cover_photo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/edit_icon"
        app:srcCompat="@drawable/icon_from_camera" />

    <ImageView
        android:id="@+id/iv_open_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_open_camera"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/iv_open_camera"
        android:src="@drawable/icon_from_gallery"
        app:srcCompat="@drawable/icon_from_gallery" />

    <!--    <ImageView-->
<!--        android:id="@+id/iv_add_button"-->
<!--        android:layout_width="24dp"-->
<!--        android:layout_height="24dp"-->
<!--        android:layout_alignStart="@+id/iv_cover_photo"-->
